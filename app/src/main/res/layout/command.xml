<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Command"
        android:id="@+id/bCommand"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="120dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etCommand"
        android:layout_marginTop="50dp"
        android:hint="Try a Command" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/tbCommand"
        android:layout_marginTop="120dp"
        android:layout_gravity="right" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hello"
        android:id="@+id/tvValid"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        android:textSize="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:id="@+id/tvCommand"
        android:layout_gravity="center"
        android:textSize="25dp"/>


    <SlidingDrawer
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:content="@+id/linearLayout"
        android:handle="@+id/Button2"
        android:id="@+id/slidingDrawer">

        <RelativeLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/myColorBlack">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/myColorWhite"
                android:textSize="25dp"
                android:text="Commands :  Shortcuts"/>

        <TextView
            android:layout_marginTop="40dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="@color/myColorWhite"
            android:textSize="20dp"
            android:text="red
            blue
            green
            left
            center
            right
            random"/>
            <TextView
                android:layout_marginLeft="200dp"
                android:layout_marginTop="50dp"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textColor="@color/myColorWhite"
                android:textSize="20dp"
                android:text="01
                02
                03
                04
                05
                06
                07"/>

        </RelativeLayout>
        <Button
            android:id="@+id/Button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Help" />
    </SlidingDrawer>
</FrameLayout>
